{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "total": {
      "type": "decimal"
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "date": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "created",
        "paid",
        "cancelled"
      ]
    },
    "qr_code": {
      "type": "text"
    },
    "qr_code_base64": {
      "type": "string"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "raffle.items"
    }
  }
}
